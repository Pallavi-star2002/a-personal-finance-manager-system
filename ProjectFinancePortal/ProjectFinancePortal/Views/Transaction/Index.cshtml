@model IEnumerable<ProjectFinancePortal.Models.Transaction>

<h2>All Transactions</h2>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Category</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Date.ToShortDateString()</td>
                <td>@transaction.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@transaction.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@transaction.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add Transaction</a>
